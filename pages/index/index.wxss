.user_root {
}

.user_heard {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.heard_login {
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.heard_login image {
  height: 160rpx;
  width: 160rpx;
}


.account {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  background: #eee;
  padding-top: 4rpx;
}

.account view {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background: #fff;
  width: 33%;
}

.order {
  background: #eee;
  padding-top: 20rpx;
}

.order-shortcut {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #fff;
}

.order-shortcut .item {
  display: flex;
  flex-direction: column;
  width: 150rpx;
  text-align: center;
}

.order-shortcut .item .icon {
  width: 67rpx;
  height: 67rpx;
  margin-left: 45rpx;
}

.order-shortcut .item .text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.van-divider {
  width: 100%;
  height: 1px;
  background: #eee;
}
